<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/activity_gradient"
    android:layout_margin="16dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/textview_genere"
        android:layout_below="@id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_below="@id/textview_genere"
        android:id="@+id/textview_releasedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/plot"
        android:layout_below="@id/textview_releasedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/textview_rating"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/textview_title"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"/>
</RelativeLayout>